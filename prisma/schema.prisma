generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  email       String   @unique
  username    String   @unique
  password    String

  rank        String   @default("default")
  
  sessions        Sessions[]
  image           UserImages?

  forum_posts     ForumPosts[]
  forum_likes     ForumLikes[]

  forum_comments  ForumComments[]
  tokens          Tokens?
}

model UserImages {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  file_name     String
  mime_type     String
  size          Int
  binary_blob   Bytes
  username      String @unique
  user          Users  @relation(fields: [username], references: [username], onDelete: Cascade) 
}

model Sessions {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  session         String   @unique
  
  session_created DateTime @db.Date
  session_expires DateTime @db.Date
  
  user_id         String   @db.ObjectId 
  user            Users    @relation(fields: [user_id], references: [id], onDelete: Cascade) 
}

model Otp {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  code          String
  code_expires  DateTime @db.Date
  used          Boolean  @default(false)

  @@index([email])
}

model ForumPosts {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  
  heading     String
  content     String 
  topic       String
  likes       Int     @default(0)
  type        String  @default("Discussion")

  author_name String  
  author      Users   @relation(fields: [author_name], references: [username], onDelete: Cascade)  
  
  user_likes     ForumLikes[]
  image          ForumImages?
  forum_comments ForumComments[] 
}

model ForumImages {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  file_name     String
  mime_type     String
  size          Int
  binary_blob   Bytes
  post_id       String      @db.ObjectId @unique
  post          ForumPosts  @relation(fields: [post_id], references: [id]) 
}


model ForumLikes {
  id      String      @id @default(auto()) @map("_id") @db.ObjectId

  user_id String      @db.ObjectId
  post_id String      @db.ObjectId

  user    Users       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post    ForumPosts  @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@unique([user_id, post_id])
}

model ForumComments {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  post_id     String      @db.ObjectId
  
  comment     String  
  author_name String 

  post        ForumPosts  @relation(fields: [post_id], references: [id], onDelete: Cascade)
  author      Users       @relation(fields: [author_name], references: [username], onDelete: Cascade)
}

model Tokens {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  tokens   Int      @default(0)
  user_id  String   @db.ObjectId @unique
  user     Users    @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
