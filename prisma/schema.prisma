generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Posts {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  author    String
  content   String
  createdAt String
  title     String
}

model Sessions {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  session         String   
  session_created DateTime @db.Date
  session_expires DateTime @db.Date
  user_id         String
}

model Users {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String
  username String
}
