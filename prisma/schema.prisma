generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ForumPosts {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  heading     String
  content     String 
  author_name String  
  topic       String
  likes       Int
  user        Users    @relation(fields: [author_name], references: [username])
  images      Images[]
}

model BlogPosts {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  heading String
  content String
}

model Sessions {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  session         String   @unique
  
  session_created DateTime @db.Date
  session_expires DateTime @db.Date
  
  user_id         String   @db.ObjectId 
  user            Users    @relation(fields: [user_id], references: [id]) 
}

model Images {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  file_name      String
  mime_type  String
  size         Int?
  binary_blob  Bytes    // ‚Üê Use Bytes type for BLOB storage
  post_id   String      @db.ObjectId
  forumPost ForumPosts  @relation(fields: [post_id], references: [id])
}

model Users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  
  email       String   @unique
  username    String   @unique
  password    String
  
  sessions    Sessions[]
  forum_posts ForumPosts[]
}
